{% extends 'CoursoraAmministratoreBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets "@CoursoraAmministratoreBundle/Resources/public/css/lista.css"
                   "@CoursoraAmministratoreBundle/Resources/public/css/lista2.css"
    filter='uglifycss' %}
         <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}


{% block title %}Restra prof - {{ parent() }}{% endblock %}

{% block content %}

    <h1>{{  "lista.header" | trans  }}</h1>

    <ul>
        {% for professore in professori %}

            <li> <a href="{{ path("coursora_amministratore_professore_show", {id: professore.id} ) }}"> {{ professore.nomeCompleto }}</a></li>

        {% endfor %}

    </ul>

    {% set count = professori | length %}

    <div> {{ "lista.footer" | transchoice(count, {"%count%": count} )  }} </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts "@CoursoraAmministratoreBundle/Resources/public/js/lista.js"
    filter='uglifyjs2' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}